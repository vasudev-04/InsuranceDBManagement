@model InsuranceMgmtDB.Models.tbl_users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>




    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>


</head>
<body>
    <div style="background-image: linear-gradient(#737ded, #d6aae8);height: 100vh; background-size: cover; ">


        <!-- Section: Design Block -->
        <section class="text-center text-lg-start">
            <style>
    .cascading-right {
      margin-right: -50px;
    }


                body {
                    overflow: hidden;


                }

    @*@media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }*@
            </style>

            <!-- Jumbotron -->

           



                <div class="container py-4">
                    <div class="row g-0 mt-5 align-items-center">
                        <div class="col-lg-6 pt-2 mt-5 mb-5 mb-lg-0">
                            <div class="card pt-2 cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55); 
            backdrop-filter: blur(6px);">

                                <div class="card-body p-4 shadow-5 text-center">
                                    <h2 class="fw-bold mb-5"><span style="color:red">HDFC </span><span style="color:blue">LIFE INSURANCE </span></h2>

                                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()

                                        @Html.ValidationSummary(true, "", new { @class = "text text-danger", @style = "font-weight:bold; text-align:left;" })
                                        <div class="pb-4">


                                                <div style="text-align:left!important" class="form-group mb-3">
                                                    <label class="form-label" for="form3Example3">Email address</label>
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.emailid, new { htmlAttributes = new { @class = "form-control", @style = "width:30vw" } })
                                                        @Html.ValidationMessageFor(model => model.emailid, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>




                                                <div style="text-align:left!important" class="form-group mb-4">
                                                    <label class="form-label" for="form3Example3">Password</label>
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @style = "width:30vw" } })
                                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>



                                                <!-- Submit button -->
                                                
                                                    <button type="submit" id="savedata" class="btn btn-primary btn-block">
                                                        LogIn
                                                    </button>
                                                
                                                

                                        </div>
                                        }


                                    <div style="text-align:right; ">
                                        <a href="" <p style="color: brown; text-decoration:none" >Forgot Password?</p></a>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 mb-5 mt-5 mb-lg-0">
                            <img src="https://i0.wp.com/themileage.in/wp-content/uploads/2021/02/maxresdefault.jpg?fit=1280%2C720&ssl=1" class="w-100 rounded-4 shadow-4"
                                 alt="" />
                        </div>
                    </div>
                </div>
                <!-- Jumbotron -->
        </section>
        <!-- Section: Design Block -->


    </div>


    


</body>
</html>
