                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.promoted_date, "Promoted Date", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bolder" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.promoted_date, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.promoted_date, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.joined, "Joined Date", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bolder" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.joined, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.joined, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.left_ceased, "Left/Ceased Date", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bolder" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.left_ceased, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.left_ceased, "", new { @class = "text-danger" })
                    </div>
                </div>





                <div class="form-group">
                    @Html.LabelFor(model => model.status, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.RadioButtonFor(model => model.status, "Active", htmlAttributes: new { @Required = "Required" }) <span style="color:green; font-weight:bold; font-size:15px; margin-right:10px; margin-top:10px">Active </span>

                        @Html.RadioButtonFor(model => model.status, "InActive", htmlAttributes: new { @Required = "Required" }) <span style="color:red; font-weight:bold; font-size:15px; margin-right:10px">InActive </span>

                        @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <span><input id="submitbtn" type="submit" value="Save" class="btn btn-primary" /></span>

            <span><input type="button" value="Submit Next" class="btn btn-primary"></span>
        </div>
    </div>


