                        @Html.DropDownListFor(model => model.tbl_advisor_experience_level.advisor_exp_level, new SelectList(@ViewBag.message), "----Select item---", htmlAttributes: new { @Required = "Required" })
                        @Html.ValidationMessageFor(model => model.tbl_advisor_experience_level.advisor_exp_level, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>



            <div class="col-md-6 col-sm-12">

                <div class="form-group">
                    @Html.LabelFor(model => model.date_of_appointment, "Date of Appt", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight:bolder" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.date_of_appointment, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.date_of_appointment, "", new { @class = "text-danger" })
